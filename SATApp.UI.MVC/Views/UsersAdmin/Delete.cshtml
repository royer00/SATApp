@model SATApp.UI.MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Delete " + Model.Email;
}

<h2 class="text-center mt-5">@ViewBag.Title</h2>

<h3 class="text-danger font-weight-bold text-center">Are you sure you want to delete this User?</h3>
<div class="text-center">

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mb-5">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
        </div>
    }
</div>
